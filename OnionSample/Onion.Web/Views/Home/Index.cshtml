
@{
    ViewBag.Title = "Index";
}

<h2>Medicine List</h2>


<div ng-app="MyApp">
    <div ng-controller="MedicineController">
        
        <table class="table table-bordered table-hover">
            <tr>
                <th>Name</th>
                <th>Group</th>
                <th>Volume</th>
                <th>Company</th>
                <th>Action</th>
            </tr>
            <tr ng-repeat="m in medicines">
                <td>{{m.Name}}</td>
                <td>{{m.Group}}</td>
                <td>{{m.Volume}}</td>
                <td>{{m.Company.Name}}</td>
                <td>
                    <a class="btn btn-warning btn-sm" ng-click="GetById(m.Id)">Edit</a>
                    <a class="btn btn-danger btn-sm" ng-click="askDelete(m.Id)">Delete</a>
                </td>
            </tr>
        </table>

        <br />


        <form novalidate name="frmStudent" id="frmStudent" class="form-horizontal row-border">
            <br />
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Name"> Name</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="Name"
                               class="form-control"
                               name="Name" ng-model="Name" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Group"> Group</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="Group"
                               class="form-control"
                               name="Group" ng-model="Group" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Volume"> Volume</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="Volume"
                               class="form-control"
                               name="Volume" ng-model="Volume" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Company"> Company</label>
                    <div class="col-md-7">
                        @*<input type="text"
                               id="CompanyId"
                               class="form-control"
                               name="CompanyId" ng-model="CompanyId" />*@
                        <select ng-model="CompanyId" name="CompanyId" 
                                class="form-control" ng-options="c.Id as c.Name for c in Companies">
                            <option value="">Please Select</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-7">
                        <span id="save" class="btn btn-success margin-right-btn" ng-click="SaveUpdate()">
                            <i class="icon-save"></i>  {{btnText}}
                        </span>
                        
                        <span id="save" class="btn btn-danger margin-right-btn" ng-click="Clear()">
                            <i class="icon-save"></i> Clear
                        </span>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <hr />
            <br />
            <br />
        </form>


    </div>
</div>

<script src="~/scripts/angular.js"></script>
<script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.10.0.js"></script>
<script src="~/App/app.js"></script>
<script src="~/App/controller/MedicineController.js"></script>
<script src="~/App/services/MedicineService.js"></script>